{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": "./",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "typeRoots": [
      "node_modules/@types",
    ],
    "paths": {
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts"
  ],
  "compileOnSave": false
}
